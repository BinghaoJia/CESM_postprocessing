<?xml version="1.0"?>

<config_definition>

<!-- ======================================================================= -->
<!-- env_postprocess.xml                                                     -->
<!-- ======================================================================= -->
{% if standalone %}
<!-- ============================================================================== -->
<!-- User must define the following entry id / value pairs for standalone caseroot  -->
<!-- ============================================================================== -->

<!-- location of history files on local disk to be postprocessed -->
<entry id="DOUT_S_ROOT" value="" />

<!-- atmosphere grid resolution -->
<entry id="ATM_GRID" value="" />

<!-- sea ice grid resolution -->
<entry id="ICE_GRID" value="" />

<!-- land grid resolution -->
<entry id="LND_GRID" value="" />

<!-- ocean grid resolution -->
<entry id="OCN_GRID" value="" />

<!-- CESM repository tag version -->
<entry id="CCSM_REPOTAG" value="" />

<!-- ======================================================================= -->
<!-- End of mandatory user defined entry id / value pairs for new caseroot   -->
<!-- ======================================================================= -->

<!-- location of postprocessing created caseroot directory on local disk -->
<entry id="CASEROOT" value="{{ caseroot }}" />

<!-- case name -->
<entry id="CASE" value="{{ case }}" />

<!-- standalone postprocessing directory (True or False) -->
<entry id="STANDALONE" value="TRUE" />
{% else %}
<!-- standalone postprocessing directory (True or False) -->
<entry id="STANDALONE" value="FALSE" />
{% endif %}
<!-- post processing directory location on local machine -->
<entry id="POSTPROCESS_PATH" value="{{ postprocess_path }}" />
{% for group in group_list %}
  {% for k,v in group.iteritems() %}
    {% if k == 'comment' %}
       {% set comment = v %}
    {% elif k == 'xml_list' %}
<!-- ======================================================================= -->
<!-- {{ comment }} -->
<!-- ======================================================================= -->
       {% for xml in v %}
<!-- {{ xml._desc }} -->
<entry id="{{ xml._id }}" value="{{ xml._value }}" />
       {% endfor %}
    {% endif %}
  {% endfor %}
{% endfor %}
<!-- ====================================== -->
</config_definition>
