<?xml version="1.0"?>

<machine_postprocess>

  <machine name="goldbach">
    <timeseries_pes>8</timeseries_pes>
    <atm_diags_pes>8</atm_diags_pes>
    <ice_diags_pes>8</ice_diags_pes>
    <lnd_diags_pes>8</lnd_diags_pes>
    <ocn_diags_pes>8</ocn_diags_pes>
    <mpi_command>mpiexec</mpi_command>
    <modules>
      <module></module>
    </modules>
    <za_fc></za_fc>
    <za_fflags></za_fflags>
    <za_include></za_include>
    <za_libs></za_libs>
  </machine>

  <machine name="yellowstone">
    <timeseries_pes>64</timeseries_pes>
    <atm_diags_pes>124</atm_diags_pes>
    <ice_diags_pes>124</ice_diags_pes>
    <lnd_diags_pes>124</lnd_diags_pes>
    <ocn_diags_pes>124</ocn_diags_pes>
    <mpi_command>mpirun.lsf</mpi_command>
    <modules>
      <module>module load ncl</module>
      <module>module load nco</module>
      <module>module load intel</module>
      <module>module load netcdf</module>
    </modules>
    <za_fc>ifort</za_fc>
    <za_fflags>-c -g -O2</za_fflags>
    <za_include>-I/glade/apps/opt/netcdf/4.2/intel/12.1.4/include</za_include>
    <za_libs>-L/glade/apps/opt/netcdf/4.2/intel/12.1.4/lib -lnetcdff -lnetcdf</za_libs>
  </machine>

</machine_postprocess>

